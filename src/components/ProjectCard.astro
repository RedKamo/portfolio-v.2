---
const { project } = Astro.props;
import Stack from './Stack.astro'
---

<main
  class="atropos flex flex-col bg-headerColor backdrop-blur-md bg-opacity-20 rounded-xl border-2 border-borderWindow hover:shadow-pink-500/10 hover:border-pink-500/10"
>
  <img class="m-2 rounded-xl" src={project.image} alt="" />
  <section class="flex flex-col h-full m-2">
  <p class="pb-2 text-sm text-gray-300">{project.description}</p>
  <section class="flex justify-between items-center">
  <article class="flex">
    {project.stacks?.map((stack, index)=>(
      <Stack {...stack} />
    ))}
  </article>
  <a target="_blank" class="w-auto text-white bg-gradient-to-r from-purple-500 via-purple-600 to-purple-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 shadow-lg shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" href={project.link}>View Source</a>
  </section>
  </section>
</main>
