---
import Logo from '../src/assets/logo.png';
---

<button class="w-16 transform motion-safe:hover:scale-110 text-sm text-white hidden fixed z-190 bottom-4 right-4 "  id="to-top-button" onclick="goToTop()">
    <img  src={Logo} alt="" title="to the moon" />
</button>


<script is:inline>
    let mybutton = document.getElementById("to-top-button");

    window.onscroll = function() {scrollFunction()};

    function scrollFunction() {
    if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
        mybutton.style.display = "block";
    } else {
        mybutton.style.display = "none";
    }
    }

    function goToTop() {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
    }
    </script>